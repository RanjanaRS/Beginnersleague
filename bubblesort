//Bubble sort

#include<stdio.h>
#include<string.h>
int size;
char temp[50];
char a[50][50];
 void sorting()
 {
     printf("Enter array size : ");
     scanf("%d",&size);
     printf("Enter array elements : ");
     for(int i=0;i<size;i++)
     {
         scanf("%s",a[i]);
     }
     for(int i=0;i<size;i++)
     {
         for(int j=0;j<i;j++)
         {
             if(strlen(a[j])>strlen(a[i]))
             {
               strcpy(temp,a[i]);
               strcpy(a[i],a[j]);
               strcpy(a[j],temp);
             }
         }
     }
     printf("The sorted array is\n");
      for(int i=0;i<size;i++)
     {
        printf("%s\n",a[i]);
     }
 }
 int main()
 {
   sorting();
 }
